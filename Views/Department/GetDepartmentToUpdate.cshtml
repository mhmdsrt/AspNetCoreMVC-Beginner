@model AspNetCoreProject1.Models.Department

@{
    ViewData["Title"] = "GetDepartmentToUpdate";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateDepartment", "Department", FormMethod.Post))
{
    <div>
        <label><strong>ID</strong></label>
        @Html.TextBoxFor(m => m.DepartmentID, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div>
        <label><strong>Department Name</strong></label>
        @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", @required = "", maxlength = 25, minlength = 3 })
    </div>
    <button class="btn btn-warning" style="color:white;margin-top:10px;">Update</button>
}

