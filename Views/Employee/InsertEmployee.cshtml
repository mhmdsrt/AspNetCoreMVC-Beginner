@model AspNetCoreProject1.Models.Employee

@{
    ViewData["Title"] = "InsertEmployee";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (@Html.BeginForm("InsertEmployee", "Employee", FormMethod.Post))
{
    <div style="margin-top:10px;">
        <label><strong>Employee First Name</strong></label>
        @Html.TextBoxFor(m => m.EmployeeFirstName, new { @class = "form-control",@required="",@maxlength=25,@minlength=3 })
    </div>

    <div style="margin-top:10px;">
        <label><strong>Employee Sur Name</strong></label>
        @Html.TextBoxFor(m => m.EmployeeSurName, new { @class = "form-control", @required = "", @maxlength = 25, @minlength = 3 })
    </div>

    <div style="margin-top:10px;">
        <label><strong>Employee City</strong></label>
        @Html.TextBoxFor(m => m.EmployeeCity, new { @class = "form-control", @required = "", @maxlength = 25, @minlength = 3 })
    </div>

    <div style="margin-top:10px;">
        <label><strong>Employee Department</strong></label>
        @Html.DropDownListFor(m => m.DepartmentID, (List<SelectListItem>)ViewBag.selectListDepartment, new { @class = "form-control" })
    </div>

    <div style="margin-top:10px;">
        <button class="btn btn-success" style="margin-top:12px;">Insert</button>
    </div>

}

